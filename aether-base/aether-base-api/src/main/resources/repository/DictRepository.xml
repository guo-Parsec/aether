<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.finder.aether.base.api.repository.DictRepository">
  <resultMap id="BaseResultMap" type="top.finder.aether.base.api.entity.Dict">
    <!--@mbg.generated-->
    <!--@Table ams_dict-->
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="dict_type_code" jdbcType="VARCHAR" property="dictTypeCode" />
    <result column="dict_type_name" jdbcType="VARCHAR" property="dictTypeName" />
    <result column="dict_name" jdbcType="VARCHAR" property="dictName" />
    <result column="dict_code" jdbcType="VARCHAR" property="dictCode" />
    <result column="dict_sort" jdbcType="INTEGER" property="dictSort" />
    <result column="delete_at" jdbcType="BIGINT" property="deleteAt" />
    <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate" />
    <result column="gmt_modify" jdbcType="TIMESTAMP" property="gmtModify" />
  </resultMap>

  <sql id="Base_Column_List">
      <!--@sql select -->
      dict.id,
      dict.dict_type_code,
      dict.dict_type_name,
      dict.dict_name,
      dict.dict_code,
      dict.dict_sort,
      dict.delete_at,
      dict.gmt_create,
      dict.gmt_modify
      <!--@sql from ams_dict dict-->
  </sql>

    <select id="findDictByType" parameterType="java.lang.String" resultMap="BaseResultMap">
        select dict.dict_type_code,
               dict.dict_type_name,
               dict.dict_name,
               dict.dict_code
        from ams_dict dict
        where dict.delete_at = 0
          and dict.dict_type_code = #{dictTypeCode,jdbcType=VARCHAR}
        order by dict.dict_type_code, dict.dict_sort, dict.gmt_modify desc
    </select>


</mapper>